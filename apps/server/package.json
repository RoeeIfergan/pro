{
  "name": "@pro3/server",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "tags": [
      "type:app",
      "scope:server"
    ],
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "--node-env=production"
          ]
        },
        "configurations": {
          "development": {
            "args": [
              "--node-env=development"
            ]
          }
        }
      },
      "build2": {
        "executor": "@nx/webpack:webpack",
        "outputs": [
          "{workspaceRoot}/dist/server"
        ],
        "options": {
          "target": "node",
          "compiler": "babel",
          "main": "apps/server/src/main.ts",
          "tsConfig": "apps/server/tsconfig.app.json",
          "outputPath": "dist/server",
          "outputFileName": "main.js",
          "webpackConfig": "apps/server/webpack.config.js"
        },
        "configurations": {
          "development": {
            "optimization": false,
            "sourceMap": true
          },
          "production": {
            "optimization": true,
            "sourceMap": false
          }
        }
      },
      "dev": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "args": [
            "--trace-warnings"
          ],
          "buildTarget": "@pro3/server:build",
          "runBuildTargetDependencies": false
        },
        "buildTarget": "@pro3/server:build:development"
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@pro3/server:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@pro3/server:build:development"
          },
          "production": {
            "buildTarget": "@pro3/server:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      }
    }
  }
}