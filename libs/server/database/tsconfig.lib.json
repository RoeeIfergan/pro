{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "../../../dist/database",
    "sourceMap": true,
    "inlineSources": true,
    "tsBuildInfoFile": "../../../dist/database/tsconfig.app.tsbuildinfo",
    "emitDeclarationOnly": true,
    // "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2021",
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "references": [
    {
      "path": "../../types/tsconfig.lib.json"
    }
  ],
  "exclude": [
    "test.jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/migrationFiles/**"
  ]
}
